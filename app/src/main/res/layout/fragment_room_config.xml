<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_bg"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1.2"
            android:background="@drawable/shebei_kapian"
            android:orientation="vertical">

            <com.furniture.ui.view.SelectTitleView
                android:id="@+id/stv_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/config_select_view_size">

            </com.furniture.ui.view.SelectTitleView>

            <com.furniture.ui.view.NoScrollRecycleView
                android:id="@+id/rv_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp">

            </com.furniture.ui.view.NoScrollRecycleView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/shebei_kapian"
            android:orientation="vertical">

            <com.furniture.ui.view.SelectTitleView
                android:id="@+id/stv_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/config_select_view_size">

            </com.furniture.ui.view.SelectTitleView>

            <com.furniture.ui.view.NoScrollRecycleView
                android:id="@+id/rv_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp">

            </com.furniture.ui.view.NoScrollRecycleView>

        </LinearLayout>


    </LinearLayout>

</layout>